<div class="container">
  <div class="row">
    <div class="col-4">
    <table>
      <thead>
        <tr align="center">
          <td colspan="6">会員情報編集</td>
        </tr>
      </thead>
       <tbody>
          <%= form_with model: @customers, url: admin_customer_path, metdod: :patch do |f| %>
            <tr><td>name</td><td><%= f.text_field :name %></td></tr>
            <tr><td>email</td><td><%= f.text_area :email %></td></tr>
            <tr><td>image</tr>
            <tr><td>status</td><td><%= f.text_field :is_deleted %></tr>
            <tr><td><%= f.submit 'update' %></td></tr>
           <% end %>
        </tbody>
      </table>
    </div>
  </div>
