<div class="container">
  <div class="row">
    <div class = "col">
      <table width = "100%">
        <thead>
          <tr align="center">
            <th colspan="5"><font size=6px></i>会員一覧</th>
          </tr>
        </thead>
         <tbody>
            <tr class = "text-center">
              <td>name</td>
              <td>image</td>
              <td>email</td>
              <td>status</td>
             </tr>
            <% @customers.each do |customers| %>
            <tr class = "text-center">
              <td><%= link_to customers.name, edit_admin_customer_path(customers), class:"hoge", data: {"turbolinks"=>false} %></td>
              <td><%= image_tag customers.get_image, size: '100x100' %></td>
              <td><%= customers.email %></td>
              <td><% if customers.is_deleted == false %>
                    会員
                  <% else %>
                    退会
                  <% end %>
              </td>
              <td><%= link_to "削除", admin_customer_path(customers), method: :delete %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>