<h1>Public::Customers#edit</h1>
<%= form_with model: @customers, url: public_customer_path(@customers), method: :patch do |f| %>
<div>name:<%= f.text_field :name %></div>
<div>email:<%= f.text_area :email %></div>
<div>image:<%= f.file_field :image, accept: "image/*" %></div>
<div><%= f.submit 'update' %></div>
<div><%= f.radio_button :is_deleted, false %></div>
<div><%= f.label :is_deleted, "有効" %></div>
<div><%= f.radio_button :is_deleted, true %></div>
<div><%= f.label :is_deleted, "退会" %></div>
<% end %>